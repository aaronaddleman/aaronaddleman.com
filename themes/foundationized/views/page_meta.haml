- unless page.categories.empty?
  - unless @page.path =~ /^categories$/
    %h6.meta
      Published
      - if page.date
        on
        %time{:itemprop => "datePublished", :datetime => page.date.to_s }= format_date(page.date)
      - unless page.categories.empty?
        in
        - page.categories.each do |category|
          - if category != page.categories[-1]
            = succeed ',' do
              %a(href="#{url(category.abspath)}")= category.heading
          - else
            %a(href="#{url(category.abspath)}")= category.heading
      by
      %span{:itemprop => "creator", :itemscope => true, :itemtype => "http://schema.org/Person"}
        Aaron Addleman