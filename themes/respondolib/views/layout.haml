%head
  %meta{charset: "utf-8"}
  %meta{name: "viewport", content: "width=device-width"}
  %title= @title
  %link{:src => "http://cdn.mathjax.org/mathjax/latest/MathJax.js?config=TeX-AMS_HTML-full"}
  %link{:href => "#{url('/css/uv_themes/eiffel.css')}", :media => 'screen', :rel => 'stylesheet'}
  %link{:href => "#{url('/respondolib/app.css')}", :media => 'screen', :rel => 'stylesheet'}
  %link{:href => "#{url('/respondolib/foundation.min.css')}", :media => 'screen', :rel => 'stylesheet'}
  %link{:href => "#{url('/css/master.css')}", :media => "screen", :rel => "stylesheet", :type => "text/css" }
  = haml :analytics, :layout => false
  %script{:src=>"#{url('/respondolib/modernizr.foundation.js')}"}
  :plain
    <script type="text/x-mathjax-config">
    MathJax.Hub.Config({
    tex2jax: {inlineMath: [["$","$"],["\\(","\\)"]]}
    });
    </script>
%body{ :class => @body_class }
  .row
    / .twelve.columns
    .small-6.large-2.columns
      %h1
        =@heading
        .subheader=@subtitle

  .row
    .nine.columns{role: "content"}
      =yield
    %aside.three.columns
      =haml :sidebar, layout: false
  %footer.row
    .twelve.columns
      %hr
      .row
        / .six.columns
        /   %p Content &copy; Justin Litchfield 2013
        / .six.columns
        /   Some links may go here someday

  <!-- Included JS Files (Compressed) -->
  %script{:src=>"#{url('/respondolib/jquery.js')}"}
  %script{:src=>"#{url('/respondolib/foundation.min.js')}"}

  <!-- Initialize JS Plugins -->
  %script{:src=>"#{url('/respondolib/app.js')}"}
